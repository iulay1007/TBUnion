<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/home"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:textColor="@drawable/navigation_bar_color"
            android:drawableTop="@drawable/selector_navigation_home"
            android:layout_height="wrap_content"
            android:text="@string/text_home"/>
        <RadioButton
            android:button="@null"
            android:layout_width="0dp"
            android:textColor="@drawable/navigation_bar_color"
            android:gravity="center"
            android:drawableTop="@mipmap/select_normal"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_selected"/>
        <RadioButton
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="@drawable/navigation_bar_color"
            android:drawableTop="@mipmap/red_packet_normal"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_red_packet"/>
        <RadioButton
            android:gravity="center"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/search_normal"
            android:textColor="@drawable/navigation_bar_color"
            android:layout_height="wrap_content"
            android:text="@string/text_search"/>

    </RadioGroup>

</RelativeLayout>